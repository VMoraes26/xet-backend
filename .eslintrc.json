{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "linebreak-style": 0,
    "global-require": 0,
    "semi": [
      "error",
      "never"
    ],
    "indent": [
      "error",
      2
    ],
    "max-len": 0,
    "class-methods-use-this": "off",
    "arrow-body-style": 0,
    "no-param-reassign": "off",
    "func-names": "off",
    "import/no-dynamic-require": 0,
    "camelcase": "off"
  }
}
